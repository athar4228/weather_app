<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <%= form_for @weather_report, method: :post do |f| %>

    <div id="error_explanation">
      <ul>
        <% f.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

    <div class='form-group'>
      <div class="row">
        <%= f.label :country_code, 'Country' %>
        <%= f.select :country_code, options_for_select(render_countries(countries), f.object.country_code), { prompt: "Please Select" }, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class="row">
        <%= f.label :city, 'City' %>
        <%= f.text_field :city, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class="row">
        <%= f.submit 'Generate Weather Report', class: 'btn btn-primary pull-right' %>
      </div>
    </div>

  <% end %>
</div>

<% if @response.present? %>
  <%= render 'show', response: @response %>
<% end %>
